<div class="modal fade" id="favoritedUsersModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="favoritedUsersLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="favoritedUsersLabel" style="color: black">Followers</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <ul class="list-group">
          <% @user.user_favoritors.each do |follower| %>
            <%= link_to follower.name, user_path(follower) %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
