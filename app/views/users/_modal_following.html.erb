<div class="modal fade" id="favoriteUsersModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="favoriteUsersLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="favoriteUsersLabel" style="color: black">Following</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <ul class="list-group user-list">
          <% @user.favorited_users.each do |following| %>
            <li class="list-group-item user-card">
              <%= link_to user_path(following), class: "card-link-modal" do %>
                <div class="user-info">
                  <% if following.my_photo.present? %>
                    <img src="<%= cl_image_path(following.my_photo.key) %>">
                  <% else %>
                    <%= image_tag 'totaro.png', class: "avatar" %>
                  <% end %>
                  <span><%= following.name %></span>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
