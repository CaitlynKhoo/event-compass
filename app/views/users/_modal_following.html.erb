<div class="modal fade" id="favoriteUsersModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="favoriteUsersLabel" style="color: black">Favorite Users</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <ul class="list-group">
          <% @user.favorites_by_type('User').each do |favorite| %>
            <li class="list-group-item"><%= favorite.favoritable.name %> (@<%= favorite.favoritable.username %>)</li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
