<% if current_user && current_user != @user %>
  <% if current_user.favorited?(@user) %>
    <%= link_to 'Unfollow', unfollow_user_path(@user), data: {turbo_method: :delete} %>
  <% else %>
    <%= link_to 'Follow', follow_user_path(@user), data: {turbo_method: :post} %>
  <% end %>
<% end %>
<p><%= link_to "#{@follower_count} followers", "#", data: { bs_toggle: "modal", bs_target: "#favoritedUsersModal" } %></p>
<p><%= link_to "#{@following_count} following", "#", data: { bs_toggle: "modal", bs_target: "#favoriteUsersModal" } %></p>
