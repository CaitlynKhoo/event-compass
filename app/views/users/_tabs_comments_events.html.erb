<ul class="nav tabs-underlined" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <span class="nav-link tab-underlined active fw-bold" id="comments-tab" data-bs-toggle="tab" data-bs-target="#comments-tab-pane" role="tab" aria-controls="bookings-tab-pane" aria-selected="true">Your Story</span>
  </li>
  <li class="nav-item" role="presentation">
    <span class="nav-link tab-underlined fw-bold" id="events-tab" data-bs-toggle="tab" data-bs-target="#events-tab-pane" role="tab" aria-controls="requests-tab-pane" aria-selected="false">Your Diary</span>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade py-3 show active" id="comments-tab-pane" role="tabpanel" aria-labelledby="bookings-tab" tabindex="0">
    <p>Display Comments</p>
    <% @user_comments.each do |comment| %>
    <%= render 'shared/comment', comment: comment %>
    <% end %>
  </div>
  <div class="tab-pane fade py-3" id="events-tab-pane" role="tabpanel" aria-labelledby="requests-tab" tabindex="0">
    <%= render 'shared/past_events' %>
  </div>
</div>
