<div class="card-comment">
  <div class="card-comment-infos">
    <% if @user && @user.my_photo.attached? %>
      <%= cl_image_path(@user.my_photo.key) %>
    <% else %>
      <%= image_tag "totaro.png", alt: "Le Wagon", class:"card-trip-user avatar-bordered" %>
    <% end %>
    <div>
      <div class="header">
        <h2><%= @user ? comment.event.name : comment.user.name %></h2>
        <div>
          <% if current_user.voted_for? comment %>
            <i class="fa-solid fa-thumbs-up fa-flip-horizontal"></i>
            <%else%>
          <i class="fa-regular fa-thumbs-up fa-flip-horizontal"></i>
          <% end %>
          <%= comment.votes_for.size %> upvotes
        </div>
      </div>
      <p><%= comment.comment %></p>
    </div>
  </div>
  <% photo = comment.photos.first %>
  <%= cl_image_tag(photo.key) if photo.present? %>
</div>

<%# # this page needs a 'comment' variable (comment instance) to be passed to it %>
